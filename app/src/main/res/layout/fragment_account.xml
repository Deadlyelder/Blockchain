<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212b31"
    tools:context="com.example.plarent.blockchain.fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20sp"
        android:padding="3sp"
        android:background="@color/colorAccent"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Wallet Address"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:textIsSelectable="true"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:layout_below="@+id/textView5"
            android:textColor="#fff"
            android:text="Azp8uYj90MnqtFvSdRezsa7g5"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/linearLayout"
        android:background="@color/colorAccent"
        android:id="@+id/linearLayout2">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:text="+352661932412"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3sp"
        android:layout_margin="20sp"
        android:layout_below="@id/linearLayout2"
        android:background="@color/colorAccent"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Token" />

        <TextView
            android:id="@+id/textView9"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="A7eG55hJ3" />
    </LinearLayout>


        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_above="@id/button2"
            android:textSize="20sp"
            android:textColor="#E5BB40"
            android:background="@drawable/button_style"
            android:textAllCaps="false"
            android:text="Setting" />



    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Logout"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/button_style_red"/>

</RelativeLayout>